// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/src/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Server",
      "address": "localhost",
      "protocol": "inspector",
      "port": 6009,
      "sourceMaps": true,
      "outFiles": [
        ""
      ]
    }
  ],
  "compounds": [
    {
      "name": "Client/Server",
      "configurations": [
        "Launch Extension",
        "Attach to Server"
      ]
    }
  ]
}